#!/bin/bash
# Git pre-commit hook for windjammer-ui
# This runs cargo fmt, clippy, and tests before allowing a commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found! Please install Rust."
    exit 1
fi

echo "ğŸ“ Running cargo fmt..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check failed. Run 'cargo fmt --all' to fix."
    exit 1
fi

echo "ğŸ” Running cargo clippy..."
cargo clippy --all-targets --all-features -- -D warnings
if [ $? -ne 0 ]; then
    echo "âŒ Clippy found issues. Please fix them."
    exit 1
fi

echo "ğŸ§ª Running cargo test..."
cargo test --all-features
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix them."
    exit 1
fi

echo "ğŸ“¦ Running cargo publish --dry-run..."
# Publish macro crate first (dry-run)
(cd windjammer-ui-macro && cargo publish --dry-run --allow-dirty)
if [ $? -ne 0 ]; then
    echo "âŒ Macro crate publish dry-run failed. Please fix the issues."
    exit 1
fi

# Then publish main crate (dry-run)
cargo publish --dry-run --allow-dirty
if [ $? -ne 0 ]; then
    echo "âŒ Main crate publish dry-run failed. Please fix the issues."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0

