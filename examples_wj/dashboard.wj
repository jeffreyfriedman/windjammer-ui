                            Text::new("ðŸ“Š Dashboard")
                                .size(TextSize::XLarge)
                                .bold()
                        )
                )
                .child(
                    Flex::new()
                        .direction(FlexDirection::Row)
                        .gap("16px")
                        .child(
                            Card::new()
                                .child(
                                    Flex::new()
                                        .direction(FlexDirection::Column)
                                        .gap("8px")
                                        .child(Text::new("ðŸ‘¥ Total Users").size(TextSize::Small))
                                        .child(
                                            Text::new(format!("{}", total_display.get()))
                                                .size(TextSize::XLarge)
                                                .bold()
                                        )
                                )
                        )
                        .child(
                            Card::new()
                                .child(
                                    Flex::new()
                                        .direction(FlexDirection::Column)
                                        .gap("8px")
                                        .child(Text::new("âœ“ Active Users").size(TextSize::Small))
                                        .child(
                                            Text::new(format!("{}", active_display.get()))
                                                .size(TextSize::XLarge)
                                                .bold()
                                        )
                                )
                        )
                        .child(
                            Card::new()
                                .child(
                                    Flex::new()
                                        .direction(FlexDirection::Column)
                                        .gap("8px")
                                        .child(Text::new("ðŸ’° Revenue").size(TextSize::Small))
                                        .child(
                                            Text::new(format!("${}", revenue_display.get()))
                                                .size(TextSize::XLarge)
                                                .bold()
                                        )
                                )
                        )
                        .child(
                            Card::new()
                                .child(
                                    Flex::new()
                                        .direction(FlexDirection::Column)
                                        .gap("8px")
                                        .child(Text::new("ðŸ“ˆ Growth").size(TextSize::Small))
                                        .child(
                                            Text::new(format!("{}%", growth_display.get()))
                                                .size(TextSize::XLarge)
                                                .bold()
                                        )
                                )
                        )
                )
                .child(
                    Text::new("Welcome back! Here's your overview.")
                        .size(TextSize::Medium)
                )
        )
    
    App::new("Dashboard", ui.to_vnode()).run()
}

fn main() {
    start()
}
