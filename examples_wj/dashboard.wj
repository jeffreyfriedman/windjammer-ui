// Dashboard Example - Business Metrics
// Demonstrates: Cards, grids, statistics display, data visualization

use std::ui::*

@export
fn start() {
    println!("ðŸ“Š Starting Dashboard")
    
    // Mock data
    let total_users = Signal::new(1247)
