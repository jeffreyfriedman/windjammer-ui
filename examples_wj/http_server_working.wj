// Working HTTP Server Example
// This demonstrates a simple HTTP server serving Windjammer UI components
// 
// To run: 
// 1. wj build examples_wj/http_server_working.wj -o build_server
// 2. cd build_server && cargo run
// 3. Visit http://localhost:3000 in your browser

use std::http::{Server, ServerRequest, ServerResponse}

fn main() {
    println!("Starting Windjammer Web Server...")
    
    let server = Server::new("127.0.0.1", 3000)
    
    match server.serve(handle_request) {
        Ok(_) => println!("Server stopped"),
        Err(e) => println!("Server error: {}", e),
    }
}

fn handle_request(req: ServerRequest) -> ServerResponse {
    match req.path.as_str() {
        "/" => serve_home(),
        "/api/status" => serve_api_status(),
        _ => serve_not_found(),
    }
}

