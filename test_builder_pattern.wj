// Minimal test case for builder pattern
// Pure Windjammer: no `mut` keyword needed, compiler infers it!

pub struct Counter {
    value: i32,
}

impl Counter {
    pub fn new() -> Counter {
        Counter { value: 0 }
    }
    
    // Builder pattern: returns Self and modifies fields
    // Compiler should infer: mut self (owned, mutable)
    pub fn increment(self) -> Counter {
        self.value = self.value + 1
        self
    }
    
    // Builder pattern: returns Self and modifies fields
    // Compiler should infer: mut self (owned, mutable)
    pub fn set(self, value: i32) -> Counter {
        self.value = value
        self
    }
}

fn main() {
    let counter = Counter::new().increment().set(10)
    println!("Counter: {}", counter.value)
}

